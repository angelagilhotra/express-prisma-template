{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ],
				"no-multiple-empty-lines": [
					"error",
					{"max": 1, "maxEOF": 1}
				],
				"eol-last": [
					"error",
					"always"
				],
				"no-trailing-spaces": "error"
    }
}
